<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="VoltAir.Views.Pages.Search">
    <Border Padding="8, 6" CornerRadius="5" Background="{DynamicResource GreenBadge}"
            BorderThickness="{DynamicResource ThicknessResource}" BorderBrush="{DynamicResource GreenBorderBadge}"
            VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel Orientation="Horizontal"
                    Spacing="5">
            <Svg Path="../../Assets/Search/Clock.svg" Width="16" Height="16"/>
            <TextBlock FontSize="13" FontWeight="300"
                       Foreground="{DynamicResource GreenBorderBadge}">
                Coming Soon
            </TextBlock>
        </StackPanel>
    </Border>
</UserControl>
