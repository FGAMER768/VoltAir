<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="VoltAir.Views.Pages.SettingsView.P2">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Spacing="10">
            <TextBlock x:Name="CacheDirectoryPathTextBlock" FontWeight="300"/>
            <Button Content="Open cache directory" Classes="Secondary" x:Name="CacheDirectory" Click="OnAccessCacheDirectoryClick"
                    HorizontalAlignment="Stretch"/>
            <Button Content="Clear Cache" Click="OnClearCacheClick" Classes="Primary"
                    HorizontalAlignment="Stretch"/>
        </StackPanel>
        
        <!-- Toast Container -->
        <Panel x:Name="ToastContainer"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Bottom"
               Margin="10,0,10,10"
               ZIndex="100" />
    </Grid>
</UserControl>