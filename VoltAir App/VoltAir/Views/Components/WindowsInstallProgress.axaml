                    Fill="{DynamicResource Foreground}"/>
            </Viewbox>
        </StackPanel>

        <!-- Current step -->
        <TextBlock x:Name="CurrentStep" Grid.Row="1"
                   Text="Downloading ISO image..."
                   FontSize="16" FontWeight="500"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,15"/>

        <!-- Progress bar -->
        <ProgressBar x:Name="ProgressBar" Grid.Row="2"
                     Value="0" Maximum="100"
                     Height="20" Margin="0,0,0,10"/>

        <!-- Percentage -->
        <TextBlock x:Name="ProgressText" Grid.Row="3"
                   Text="0%"
                   FontSize="14"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

        <!-- Download information -->
        <Grid Grid.Row="4" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Download speed -->
            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                <TextBlock Text="Speed"
                           FontSize="12" Foreground="#AAAAAA"
                           HorizontalAlignment="Center"/>
                <TextBlock x:Name="DownloadSpeed"
                           Text="0 MB/s"
                           FontSize="14" FontWeight="SemiBold"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Remaining time -->
            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                <TextBlock Text="Remaining Time"
                           FontSize="12" Foreground="#AAAAAA"
                           HorizontalAlignment="Center"/>
                <TextBlock x:Name="EstimatedTime"
                           Text="Calculating..."
                           FontSize="14" FontWeight="SemiBold"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Installation log -->
        <Border Grid.Row="5"
                BorderBrush="{DynamicResource LogsBorder}" BorderThickness="0.5"
                CornerRadius="5" Margin="0,0,0,15">
            <ScrollViewer x:Name="LogScroller" VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="LogText"
                           Padding="10"
                           TextWrapping="Wrap"
                           FontFamily="Consolas, Monospace"
                           FontSize="12"/>
            </ScrollViewer>
        </Border>

        <!-- Buttons -->
        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Error or success message -->
            <TextBlock x:Name="StatusMessage"
                       Grid.Column="0"
                       VerticalAlignment="Center"/>

            <!-- Cancel or close button -->
            <Button x:Name="CancelButton"
                    Grid.Column="1"
                    Classes="Secondary"
                    Content="Cancel"
                    Padding="20,8"
                    Click="OnCancelButtonClick"/>
        </Grid>
    </Grid>
        </Grid>
    </ScrollViewer>
</Window>