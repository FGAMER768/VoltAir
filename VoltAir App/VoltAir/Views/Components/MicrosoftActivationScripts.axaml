<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="VoltAir.Views.Components.MicrosoftActivationScripts"
        Title="Microsoft Activation Scripts"
        Width="400"
        Height="200">
    <StackPanel Margin="10">
        <Button Content="Activate Windows (HWID)"
                Click="OnActivateWindowsClick"
                Width="200"
                HorizontalAlignment="Left" />

        <!-- Log output area -->
        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="0,10,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBox x:Name="LogOutput"
                         IsReadOnly="True"
                         FontFamily="Consolas"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Padding="10"/>
            </ScrollViewer>
        </Border>

        <!-- Toast notifications container -->
        <Panel x:Name="ToastContainer" />
    </StackPanel>
</Window>