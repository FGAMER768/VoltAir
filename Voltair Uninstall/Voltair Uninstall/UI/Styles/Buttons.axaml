    <!-- Button WinIoT -->
    <Style Selector="Button.WinIoT">
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="10 5"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="FontWeight" Value="400"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        CornerRadius="5">
                    <ContentPresenter Content="{TemplateBinding Content}"
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                      Margin="{TemplateBinding Padding}"/>
                    <Border.Transitions>
                        <Transitions>
                            <BrushTransition Duration="0:0:0.1" Property="Background" />
                        </Transitions>
                    </Border.Transitions>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
    <Style Selector="Button.WinIoT:pointerover">
        <Setter Property="Background" Value="rgba(255, 255, 255, 0.9)"/>
    </Style>
    <Style Selector="Button.WinIoT:pressed">
        <Setter Property="Background" Value="rgba(255, 255, 255, 0.85)"/>
    </Style>
</Styles>