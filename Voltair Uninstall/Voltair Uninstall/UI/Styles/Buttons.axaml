                        BorderBrush="{TemplateBinding BorderBrush}"
                        CornerRadius="5">
                    <ContentPresenter Content="{TemplateBinding Content}"
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                      Margin="{TemplateBinding Padding}"/>
                    <Border.Transitions>
                        <Transitions>
                            <BrushTransition Duration="0:0:0.1" Property="Background" />
                        </Transitions>
                    </Border.Transitions>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
    <Style Selector="Button.Secondary:pointerover">
        <Setter Property="Background" Value="{DynamicResource ButtonSecondaryBgHover}"/>
    </Style>
    <Style Selector="Button.Secondary:pressed">
        <Setter Property="Background" Value="{DynamicResource ButtonSecondaryBgPressed}"/>
    </Style>
    
    <!-- Button Alert -->
    <Style Selector="Button.Alert">
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="White"/>
